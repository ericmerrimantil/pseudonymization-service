{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "lib": ["es6", "dom", "es2020", "esnext.array", "ESNext.String"],
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./"
  },
  "exclude": ["node_modules"]
}
